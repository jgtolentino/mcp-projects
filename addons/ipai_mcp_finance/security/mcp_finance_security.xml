<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="module_category_mcp_finance" model="ir.module.category">
        <field name="name">MCP Finance</field>
        <field name="description">MCP Finance Tools access control</field>
        <field name="sequence">100</field>
    </record>

    <record id="group_mcp_finance_user" model="res.groups">
        <field name="name">MCP Finance User</field>
        <field name="category_id" ref="module_category_mcp_finance"/>
        <field name="comment">Can execute read-only MCP finance tools (trial balance, aging)</field>
    </record>

    <record id="group_mcp_finance_manager" model="res.groups">
        <field name="name">MCP Finance Manager</field>
        <field name="category_id" ref="module_category_mcp_finance"/>
        <field name="implied_ids" eval="[(4, ref('group_mcp_finance_user'))]"/>
        <field name="comment">Can execute all MCP finance tools including journal entries</field>
    </record>

    <record id="group_mcp_finance_admin" model="res.groups">
        <field name="name">MCP Finance Administrator</field>
        <field name="category_id" ref="module_category_mcp_finance"/>
        <field name="implied_ids" eval="[(4, ref('group_mcp_finance_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="comment">Can configure MCP finance settings and view audit logs</field>
    </record>

    <!-- Record Rules -->
    <record id="rule_mcp_finance_config_company" model="ir.rule">
        <field name="name">MCP Finance Config: Company Rule</field>
        <field name="model_id" ref="model_mcp_finance_config"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_mcp_finance_user'))]"/>
    </record>

    <record id="rule_mcp_finance_execution_company" model="ir.rule">
        <field name="name">MCP Finance Execution: Company Rule</field>
        <field name="model_id" ref="model_mcp_finance_tool_execution"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_mcp_finance_user'))]"/>
    </record>

    <!-- Users can only see their own executions unless admin -->
    <record id="rule_mcp_finance_execution_user" model="ir.rule">
        <field name="name">MCP Finance Execution: User Rule</field>
        <field name="model_id" ref="model_mcp_finance_tool_execution"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_mcp_finance_user'))]"/>
    </record>

    <!-- Admins can see all executions -->
    <record id="rule_mcp_finance_execution_admin" model="ir.rule">
        <field name="name">MCP Finance Execution: Admin Rule</field>
        <field name="model_id" ref="model_mcp_finance_tool_execution"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_mcp_finance_admin'))]"/>
    </record>
</odoo>
